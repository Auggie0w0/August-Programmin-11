<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="207.0" prefWidth="282.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <FlowPane prefHeight="39.0" prefWidth="242.0">
      <Button fx:id="btngetname" mnemonicParsing="false" onAction="#printName" text="Print name" textFill="WHITE"/>
      <TextField fx:id="textgetname" promptText="Username"/>
   </FlowPane>
   <HBox alignment="CENTER" prefHeight="62.0" prefWidth="242.0" spacing="10.0">
      <HBox prefHeight="62.0" prefWidth="62.0">
         <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0">
            <Label text="Add">
               <font>
                  <Font size="10.0"/>
               </font>
            </Label>
            <Label text="Subtract">
               <font>
                  <Font size="10.0"/>
               </font>
            </Label>
         </VBox>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="62.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TextField fx:id="textadd" nodeOrientation="LEFT_TO_RIGHT">
                     <font>
                        <Font size="10.0"/>
                     </font>
                  </TextField>
                  <TextField fx:id="textsubtract" nodeOrientation="LEFT_TO_RIGHT">
                     <font>
                        <Font size="10.0"/>
                     </font>
                  </TextField>
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox prefHeight="62.0" prefWidth="66.0">
         <Button fx:id="add" mnemonicParsing="false" onAction="#add" prefHeight="31.0" prefWidth="69.0" text="Add"/>
         <Button fx:id="subtract" mnemonicParsing="false" onAction="#subtract" text="Subtract"/>
      </VBox>
   </HBox>
</VBox>
